<mvc:View
    id="_IDGenViewHP"
    controllerName="logali.sapui5n1.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Panel
        id="_IDGenPanel2"
        headerText="{i18n>helloPanel}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <Button
                id="helloDialogButton"
                icon="sap-icon://action"
                text="{i18n>HelloDialogBut}"
                press=".onOpenDialog"
                class="sapUiSmallMarginEnd"
            />
            <Button
                id="_IDGenButton2"
                text="{i18n>showHelloButtonText}"
                press=".onShowHello"
                class="sapUiSmallMarginEnd"
            />
            <Input
                id="_IDGenInput2"
                value="{/recipient/name}"
                valueLiveUpdate="true"
                width="60%"
            />
            <Text
                id="_IDGenText2"
                text="Hello {/recipient/name}"
                class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"
            />
        </content>
    </Panel>
    <core:Fragment
        fragmentName="logali.sapui5n1.view.Form01"
        type="XML"
    />
</mvc:View>
