<mvc:View
    controllerName="logali.sapui5n1.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <pages>
        <Page title="{i18n>appTitle}">
            <headerContent>
                <Button
                    id="helloDialogheader"
                    icon="sap-icon://action"
                    press=".onOpenDialogHeader"
                    class="sapUiSmallMarginEnd"
                />
            </headerContent>
            <content>
                <mvc:XMLView viewName="logali.sapui5n1.view.HelloPanel" />
                <mvc:XMLView viewName="logali.sapui5n1.view.InvoicesList" />
            </content>
        </Page>
    </pages>
</mvc:View>
